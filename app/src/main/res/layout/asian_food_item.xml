<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp"
    android:layout_marginHorizontal="15dp"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="10dp"
    app:cardUseCompatPadding="false"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/asia_food_img"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:src="@drawable/grilled_meatballs"
            android:scaleType="centerCrop"
            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/restaurant_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Briand Restaurant"
                android:textSize="14sp"
                android:textColor="#F06941"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                />
            <TextView
                android:id="@+id/asian_foot_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chicago Pizza"
                android:textColor="#091020"
                android:textSize="16sp"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="10dp"
                app:layout_constraintTop_toBottomOf="@id/restaurant_name"
                app:layout_constraintLeft_toLeftOf="parent"
                />
            <ImageView
                android:id="@+id/star_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_star"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                />
            <TextView
                android:id="@+id/star_value_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.5"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                app:layout_constraintTop_toTopOf="@id/star_img"
                app:layout_constraintBottom_toBottomOf="@id/star_img"
                app:layout_constraintLeft_toRightOf="@id/star_img"
                />
            <View
                android:id="@+id/dots_left"
                android:layout_width="4dp"
                android:layout_height="4dp"
                android:background="@drawable/dots_shape"
                android:alpha="0.3"
                android:layout_marginLeft="10dp"
                app:layout_constraintTop_toTopOf="@id/star_value_tv"
                app:layout_constraintBottom_toBottomOf="@id/star_value_tv"
                app:layout_constraintLeft_toRightOf="@id/star_value_tv"
                />
            <TextView
                android:id="@+id/good_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Good"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:alpha="0.3"
                android:layout_marginLeft="10dp"
                app:layout_constraintTop_toTopOf="@id/dots_left"
                app:layout_constraintBottom_toBottomOf="@id/dots_left"
                app:layout_constraintLeft_toRightOf="@id/dots_left"
                />
            <View
                android:id="@+id/dots_right"
                android:layout_width="4dp"
                android:layout_height="4dp"
                android:background="@drawable/dots_shape"
                android:alpha="0.3"
                android:layout_marginLeft="10dp"
                app:layout_constraintTop_toTopOf="@id/star_value_tv"
                app:layout_constraintBottom_toBottomOf="@id/star_value_tv"
                app:layout_constraintLeft_toRightOf="@id/good_tv"/>
            <TextView
                android:id="@+id/asian_food_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$$"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:alpha="0.3"
                android:layout_marginLeft="10dp"
                app:layout_constraintTop_toTopOf="@id/dots_right"
                app:layout_constraintBottom_toBottomOf="@id/dots_right"
                app:layout_constraintLeft_toRightOf="@id/dots_right"
                />
            <ImageView
                android:id="@+id/free_ship_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_free_ship"
                android:visibility="gone"
                android:layout_marginEnd="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />
            <TextView
                android:id="@+id/free_ship_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:text="Free\nShip"
                android:gravity="center"
                android:visibility="gone"
                android:layout_marginBottom="10dp"
                app:layout_constraintTop_toTopOf="@id/free_ship_img"
                app:layout_constraintRight_toRightOf="@id/free_ship_img"
                app:layout_constraintLeft_toLeftOf="@id/free_ship_img"
                app:layout_constraintBottom_toBottomOf="@id/free_ship_img"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>


    

</androidx.cardview.widget.CardView>